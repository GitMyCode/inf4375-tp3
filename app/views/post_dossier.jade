extends layout

block content
  #message(style='display:none')
    span
  #wrapper
    h1 Ajouter dossier
    #newForm
        fieldset
            legend information dossier
            form.form-horizontal(role="form")
                label Code permanent:
                input#codePermanent(type='text', placeholder='Code Permanent')
                br
                label Nom:
                input#nom(type='text', placeholder='Nom')
                br
                label Prénom:
                input#prenom(type='text', placeholder='Prénom')
                br
                label Date naissance
                input#dateNaissance(type='text', placeholder='Date Naissance')
                br
                label Sexe:
                input#sexe(type='radio', name='sexeGroupe', value='1', checked=true)
                | Homme
                input#sexe(type='radio', name='sexeGroupe', value='2', checked=false)
                | Femme
                br
                button#addButton Ajouter
    block scripts
        script(src='/javascripts/post_dossier.js')

